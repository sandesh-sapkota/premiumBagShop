<%- include('./partials/header') %>
<% if(error.length>0){%>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
<% } %>
<div class="w-full h-screen flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-lg">
        <h4 class="text-3xl font-semibold text-center  text-gray-800 mb-6">Admin Access</h4>
        <form action="/owners/login" method="post">
            <input class="block w-full px-4 py-3 mb-4 text-gray-700 bg-zinc-100 border border-zinc-300 rounded-md focus: outline-none focus: ring-2  focus-ring-blue-500 focus: border-transparent" type = "email" placeholder="Email" name="email" required>
            <input class="block w-full px-4 py-3 mb-4 text-gray-700 bg-zinc-100 border border-zinc-300 rounded-md focus: outline-none focus: ring-2  focus-ring-blue-500 focus: border-transparent" type = "password" placeholder="Password" name="password" required>
            <input class="w-full px-5 py-3 mt-4 text-white bg-blue-600 rounded-full hover:bg-blue-700 transition duration-300 ease-in-out cursor-pointer" type="submit" value="Login">
            
        </form>
    </div>
</div>
    <%- include('./partials/footer') %>