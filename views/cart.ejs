<%- include('./partials/header') %>
    <div class="w-full h-screen flex items-start px-20 py-20 gap-10">
        <div class="w-[30%] rounded-md overflow-hidden">    
            <div class="w-full h-80 bg-[#222]">
                <img class="h-[12rem]" src="data:image/jpeg;base64, product.image.toString('base64')"  alt="">
            </div>
            <div class="w-full flex justify-between px-5 py-4 bg-[#555]">
                <h3 class="text-2xl">Clinge Bag</h3>
                <div class="flex items-center gap-2">
                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                    <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                    <i class="w-7 h-7 bg-white rounded-full items-center justify-center ri-subtract-line"></i>
                </div>
            </div>
            <div class="flex items-center justify-between px-5 py-3 bg-[#999]">
                <h4 class="text-lg">Net Total</h4>
                <h2 class="text-lg">Rs. 1200</h2>
            </div>
        </div>
        <div class="w-[70%]">
            <h3 class="text">Price Breakdown></h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>Rs. 1920</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                </div>
            </div>
        </div>

    </div>
